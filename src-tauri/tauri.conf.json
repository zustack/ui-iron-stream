{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Iron Stream",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "execute": true, 
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "serial-mac",
            "cmd": "system_profiler",
            "args": ["SPHardwareDataType"]
          },
           
          {
            "name": "serial-linux",
            "cmd": "hostnamectl",
            "args": ["status"]
          },
          {
            "name": "serial-win",
            "cmd": "wmic",
            "args": ["bios", "get", "serialnumber"] 
          },

          {
            "name": "apps-win",
            "cmd": "tasklist",
            "args": ["bios", "get", "serialnumber"] 
          },
          {
            "name": "apps-mac",
            "cmd": "ps",
            "args": ["-eo", "comm"] 
          },
          {
            "name": "apps-linux",
            "cmd": "ps",
            "args": ["-eo", "comm"] 
          },

          {
            "name": "kill-win",
            "cmd": "taskkill",
            "args": ["/IM", { "validator": "\\S+" }, "/F"] 
          },
          {
            "name": "kill-mac",
            "cmd": "pkill",
            "args": [{ "validator": "\\S+" }] 
          },
          {
            "name": "kill-linux",
            "cmd": "pkill",
            "args": [{ "validator": "\\S+" }] 
          }
        ]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "maximized": true,
        "title": "Iron Stream",
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ui.iron.stream",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
